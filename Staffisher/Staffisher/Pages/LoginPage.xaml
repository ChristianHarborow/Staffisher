<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Staffisher.Pages.LoginPage"
             BackgroundColor="{StaticResource backgroundGrey}">

    <StackLayout VerticalOptions="Center" Margin="30" Spacing="16">
        <Entry Placeholder="email"/>
        <Entry Placeholder="password" IsPassword="True"/>
        <Button Text="Log In" BackgroundColor="{StaticResource accentOrange}" Clicked="OnLogInClicked"/>
        <Label Text="Don't have an account?  Sign Up" HorizontalOptions="Center" FontSize="18">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSignUpTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>

</ContentPage>
