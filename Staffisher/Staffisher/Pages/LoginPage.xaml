<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Staffisher.Pages.LoginPage"
             BackgroundColor="{StaticResource backgroundGrey}">

    <StackLayout VerticalOptions="Center" Margin="30" Spacing="12">
        <Label Text="STAFFISHER" FontSize="45" HorizontalTextAlignment="Center"/>
        <Image Source="logo.png"/>
        <Entry x:Name="emailEntry" Placeholder="email" Text=""/>
        <Entry x:Name="passwordEntry" Placeholder="password" IsPassword="True" Text=""/>
        <Label x:Name="errorLabel" TextColor="Red" HorizontalTextAlignment="Center"/>
        <Button Text="Log In" BackgroundColor="{StaticResource accentOrange}" Clicked="OnLogInClicked"/>
        <Label Text="Don't have an account?  Sign Up" HorizontalOptions="Center" FontSize="18" TextDecorations="Underline" Margin="0, 10, 0, 0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSignUpTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>

</ContentPage>
