<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Staffisher.Pages.SignUpPage"
             BackgroundColor="{StaticResource backgroundGrey}">
    
    <StackLayout VerticalOptions="Center" Margin="30" Spacing="16">
        <Entry Placeholder="username"/>
        <Entry Placeholder="email"/>
        <Entry Placeholder="password" IsPassword="True"/>
        <Entry Placeholder="confirm password" IsPassword="True"/>
        <Button Text="Sign Up" BackgroundColor="{StaticResource accentOrange}" Clicked="OnSignUpClicked"/>
        <Label Text="Already have an account?  Log In" HorizontalOptions="Center" FontSize="18">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLogInTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>