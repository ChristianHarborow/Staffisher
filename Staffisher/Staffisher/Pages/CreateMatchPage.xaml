<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Staffisher.Pages.CreateMatchPage"
             BackgroundColor="{StaticResource backgroundGrey}">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout" VerticalOptions="Center" Margin="30" Spacing="30">
            <Label Text="Create Match" Style="{StaticResource titleLabel}" Margin="0, 0, 0, 10"/>
            <DatePicker x:Name="datePicker" TextColor="LightGray" HorizontalOptions="Center"/>
            <TimePicker x:Name="timePicker" TextColor="LightGray" HorizontalOptions="Center"/>
            <Entry x:Name="venueEntry" Placeholder="Venue" HorizontalTextAlignment="Center" Style="{StaticResource darkEntry}"/>
            <Entry x:Name="poolEntry" Placeholder="Pool" HorizontalTextAlignment="Center" Style="{StaticResource darkEntry}"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="30" Margin="0, 20, 0, 0">
                <Button x:Name="cancelButton" Text="Cancel" TextColor="White" BackgroundColor="{StaticResource accentOrange}"/>
                <Button x:Name="createButton" Text="Create" TextColor="White" BackgroundColor="{StaticResource accentOrange}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>